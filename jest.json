{
    "moduleFileExtensions": [
        "ts",
        "tsx",
        "js",
        "json"
    ],
    "transform": {
        "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "/src/.*\\.spec.ts$",
    "collectCoverageFrom": [
        "src/modules/**/*.ts",
        "!**/node_modules/**",
        "!**/vendor/**"
    ],
    "coverageReporters": ["json", "lcov"]
}