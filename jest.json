{
    "moduleFileExtensions": [
        "ts",
        "tsx",
        "js",
        "json"
    ],
    "transform": {
        "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "/src/.*\\.spec.ts$",
    "collectCoverageFrom": [
        "src/modules/**/*.ts",
        "src/common/**/*.ts",
        "!**/node_modules/**",
        "!**/vendor/**",
        "!src/modules/**/*.module.ts"
    ]
}